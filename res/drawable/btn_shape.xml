<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true"><shape android:shape="rectangle">
                <corners android:radius="3dip" />

                <stroke android:width="1dip" android:color="#1a1f23" />

                <gradient android:angle="-180" android:endColor="@color/button_border" android:startColor="@color/blue_light" />
            </shape></item>
        <item android:state_focused="true"><shape android:shape="rectangle">
                <corners android:radius="3dip" />

                <stroke android:width="1dip" android:color="#1a1f23" />

                <solid android:color="#394247" />
            </shape></item>
        <item><shape android:shape="rectangle">
                <corners android:radius="3dip" />

                <stroke android:width="1dip" android:color="#1a1f23" />

                <gradient android:angle="-180" android:endColor="@color/blue_light" android:startColor="@color/button_border" />
            </shape></item>
    </selector>

